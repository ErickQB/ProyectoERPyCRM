@model IEnumerable<ProyectoX.Models.TipoConsumo>

@{
    ViewData["Title"] = "Tipo Consumo";
}

<h1>TIPO CONSUMO</h1>

<p>
    <a asp-action="Create">Crear Nuevo Consumo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdTipoConsumo">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdTipoConsumo">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdTipoConsumo">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
