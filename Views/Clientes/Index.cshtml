@model IEnumerable<ProyectoX.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<h1>CLIENTES</h1>

<p>
    <a asp-action="Create">Crear Cliente</a>
</p>
<table class="table table-light">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DireccionEntrega)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DireccionFactura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdTipoClienteNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DireccionEntrega)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DireccionFactura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTipoClienteNavigation.Codigo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCliente" >Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdCliente" >Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdCliente" >Eliminar</a>
                <!--<a asp-action="Edit" asp-route-id="@item.IdCliente" class="btn btn-warning">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdCliente" class="btn btn-info">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdCliente" class="btn btn-danger">Eliminar</a>-->
            </td>
        </tr>
}
    </tbody>
</table>
